<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_transactions_confirm">

    <TextView
        android:id="@+id/type_text2"
        android:layout_width="273dp"
        android:layout_height="57dp"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:gravity="center_horizontal"
        android:text="Confirmation"
        android:textColor="#090808"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit_but_final"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:layout_marginTop="169dp"
        android:layout_marginBottom="73dp"
        android:background="#2AC6DC"
        android:text="@string/submit"
        android:textColor="#F5F3F2"
        android:textSize="@dimen/Start_Button_Log"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amt_text_confirm" />

    <TextView
        android:id="@+id/amt_text_confirm"
        android:layout_width="281dp"
        android:layout_height="41dp"
        android:layout_marginTop="72dp"
        android:text="Amount: 200000"
        android:textColor="#090808"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/reason_text_confirm"
        app:layout_constraintStart_toStartOf="@+id/reason_text_confirm"
        app:layout_constraintTop_toBottomOf="@+id/reason_text_confirm" />

    <TextView
        android:id="@+id/reason_text_confirm"
        android:layout_width="281dp"
        android:layout_height="41dp"
        android:layout_marginTop="74dp"
        android:text="Reason:    None"
        android:textColor="#090808"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/type_text_confirm"
        app:layout_constraintStart_toStartOf="@+id/type_text_confirm"
        app:layout_constraintTop_toBottomOf="@+id/type_text_confirm" />

    <TextView
        android:id="@+id/type_text_confirm"
        android:layout_width="281dp"
        android:layout_height="41dp"
        android:layout_marginTop="48dp"
        android:text="Type:     Credit"
        android:textColor="#090808"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/type_text2"
        app:layout_constraintStart_toStartOf="@+id/type_text2"
        app:layout_constraintTop_toBottomOf="@+id/type_text2" />
</androidx.constraintlayout.widget.ConstraintLayout>